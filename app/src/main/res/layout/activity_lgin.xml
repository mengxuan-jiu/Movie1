<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@mipmap/ic_launcher"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.activity.LoginActivity">
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10" />
        <ImageButton

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <EditText
       android:layout_margin="@dimen/dp_20"
        android:layout_marginTop="200dp"
        android:maxLength="17"
        android:id="@+id/username"
        android:maxLines="1"
        android:hint="用户名"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:maxLength="17"
            android:maxLines="1"
            android:hint="密码"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/forget_password"
            android:text="忘记密码"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/sign_up_now"
        android:paddingLeft="290dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂无账号 立即注册"
        android:textColor="#00BCD4" />
    <Button
        android:layout_margin="@dimen/dp_20"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#D81BAF"
        android:text="登录" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="----------或----------"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ImageButton
        android:layout_margin="@dimen/dp_20"
        android:id="@+id/we_Chat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#27A324"
        android:src="@drawable/weixin_copy_3" />
</LinearLayout>